{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build_runner",
      "type": "shell",
      "command": "flutter",
      "args": [
        "pub",
        "run",
        "build_runner",
        "build",
        "--delete-conflicting-outputs"
      ],
      "problemMatcher": ["$dart-build_runner"],
      "group": "build"
    },
    {
      "label": "build_runner watch",
      "type": "shell",
      "command": "flutter",
      "args": [
        "pub",
        "run",
        "build_runner",
        "watch",
        "--delete-conflicting-outputs"
      ],
      "problemMatcher": ["$dart-build_runner"],
      "isBackground": true,
      "group": "build"
    }
  ]
}
